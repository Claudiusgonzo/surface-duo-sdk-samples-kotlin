<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/slide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/slide_horizontal_margin"
        android:layout_marginTop="@dimen/slide_vertical_margin"
        android:layout_marginEnd="@dimen/slide_horizontal_margin"
        android:layout_marginBottom="@dimen/slide_vertical_margin"
        android:background="@android:color/white"
        android:elevation="@dimen/slide_elevation"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Slide" />

</androidx.constraintlayout.widget.ConstraintLayout>